			<div class="col-md-auto">
				<h1 class="profile_title_header">PROFILE</h1>

			</div>

			<div class="profile-container" style="margin: 0 auto">
				<h1 id="name" >Generic Name</h1>
				<div class="row">
					<div class="col text-center profile-stats-container">
						<div style="display: inline-block">

							<h4 id="age">
								Age: 0
							</h4>
						</div>
						<h4 id="sex">
							Sex: 0
						</h4>
						<h4 id="weight">
							Weight: 0 lbs
						</h4>
						<h4 id="height">
							Height: 0 cm
						</h4>
					</div>
					</div>
						<body style="text-align:center;" id="body">
					{{#if viewAlt}}
					<div class="alt-profile-container">
						<div>
							<div class="col text-center">
								<input class="profile-field-alt" type='number' placeholder="Your Age" id='agebar' min="0"/>
								<button class="btn btn-dark btn-lg alt-profile-button" onclick="changeValues2()">
									Save
								</button>
							</div>
						</div>
						<div>
							<div class="col text-center">
								<input class="profile-field-alt" type='text' placeholder="Your Sex"id='sexbar' />
								<button class="btn btn-dark btn-lg alt-profile-button" onclick="changeValues2()">
									Save
								</button>
							</div>
						</div>

						<div>
							<div class="col text-center">
								<input class="profile-field-alt" type='number' placeholder="Your Weight"id='weightbar' min="0"/>
								<button class="btn btn-dark btn-lg alt-profile-button" onclick="changeValues2()">
									Save
								</button>
							</div>
						</div>

						<div>
							<div class="col text-center ">
								<input class="profile-field-alt" type='number' placeholder="Your Height" id='heightbar' min="0"/>
								<button class="btn btn-dark btn-lg alt-profile-button" onclick="changeValues2()">
									Save
								</button>
							</div>
							<div class="row">
								<div class="col text-center">
									<button style="width: 200px" onclick="location.href='/index';" type="button" class="btn btn-dark btn-lg profile-button">BACK TO HOME</button>
								</div>
							</div>
						</div>
					</div>

					{{else}}
					<div class="origin-profile-container">
						<div>
							<div class="col text-center ">
								<input class="profile-field" type='number' placeholder="Your Age" id='agebar'  min="0"/>
							</div>
						</div>
						<div>
							<div class="col text-center">
								<input class="profile-field" type='text' placeholder="Your Sex"id='sexbar' />
							</div>
						</div>

						<div>
							<div class="col text-center">
								<input class="profile-field" type='number' placeholder="Your Weight"id='weightbar' min="0"/>
							</div>
						</div>

						<div>
							<div class="col text-center ">
								<input class="profile-field" type='number' placeholder="Your Height" id='heightbar' min="0"/>
							</div>
						</div>

						<button class="btn btn-dark btn-lg profile-button" onclick="changeValues()">
							Save
						</button>
					</div>
					<div class="row">
						<div class="col text-center">
							<button style="width: 200px" onclick="location.href='/index';" type="button" class="btn btn-dark btn-lg profile-button">BACK TO HOME</button>
						</div>
					</div>
				</div>
				{{/if}}
				<script>
						function changeAge(){
							var inputA = document.getElementById("agebar2").value;
							changeAge2(inputA);
						}
				</script>
				<script>
						function changeSex(){
							var inputS = document.getElementById("sexbar2").value;
							changeSex2(inputS);
						}
				</script>
				<script>
						function changeWeight(){
							var inputW = document.getElementById("weightbar2").value;
							alert(inputW);
							changeWeight2(inputW);
						}
				</script>
				<script>
						function changeHeight(){
							var inputH = document.getElementById("heightbar2").value;
							changeHeight2(inputH);
						}
				</script>

				<script>
						function changeValues(){
							var inputA = document.getElementById("agebar").value;
							var inputS = document.getElementById("sexbar").value;
							var inputW = document.getElementById("weightbar").value;
							var inputH = document.getElementById("heightbar").value;
							changeWeight(inputW);
							changeHeight(inputH);
							changeAge(inputA);
							changeSex(inputS);
						}
				</script>
				<script>
						function changeValues2(){
							var inputA = document.getElementById("agebar").value;
							var inputS = document.getElementById("sexbar").value;
							var inputW = document.getElementById("weightbar").value;
							var inputH = document.getElementById("heightbar").value;
							changeWeight2(inputW);
							changeHeight2(inputH);
							changeAge2(inputA);
							changeSex2(inputS);
						}
				</script>

